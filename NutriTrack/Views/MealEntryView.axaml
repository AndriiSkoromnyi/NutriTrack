<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:NutriTrack.Models"
             xmlns:viewModels="clr-namespace:NutriTrack.ViewModels"
             mc:Ignorable="d"
             x:Class="NutriTrack.Views.MealEntryView"
             x:DataType="viewModels:MealEntryViewModel">
    
    <Grid Margin="10" RowDefinitions="Auto,*,Auto" ColumnDefinitions="*,Auto">
        <DatePicker SelectedDate="{Binding SelectedDate, Converter={StaticResource DateTimeConverter}}" Grid.ColumnSpan="2" />
        
        <ListBox ItemsSource="{Binding MealEntries}" 
                 SelectedItem="{Binding SelectedMealEntry}" 
                 Grid.Row="1" Grid.Column="0" Margin="0,5,10,5">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="100,*,80,80,80">
                        <TextBlock Text="{Binding MealType}" Grid.Column="0" />
                        <TextBlock Text="{Binding ProductName}" Grid.Column="1" />
                        <TextBlock Text="{Binding Weight, StringFormat='{}{0}g'}" Grid.Column="2" />
                        <TextBlock Text="{Binding Calories, StringFormat='{}{0} ккал'}" Grid.Column="3" />
                        <TextBlock Text="{Binding Date, Converter={StaticResource DateTimeConverter}, ConverterParameter='HH:mm'}" Grid.Column="4" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,5,0,5" Spacing="5">
            <ComboBox ItemsSource="{Binding Products}" 
                      SelectedItem="{Binding SelectedProduct}"
                      Width="200">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            
            <TextBox Watermark="Weight (g)" 
                     Text="{Binding SelectedMealEntry.Weight, Mode=TwoWay}" 
                     Width="200"/>
            
            <ComboBox ItemsSource="{Binding MealTypeNames}" 
                      SelectedItem="{Binding SelectedMealTypeName, Mode=TwoWay}"
                      Width="200">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBox Watermark="Time (HH:mm)" 
                     Text="{Binding SelectedMealEntry.Date, Converter={StaticResource DateTimeConverter}, ConverterParameter='HH:mm', Mode=TwoWay}"
                     Width="200" />
        </StackPanel>
        
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
            <Button Content="Add" Command="{Binding AddMealEntryCommand}" />
            <Button Content="Save" Command="{Binding SaveMealEntryCommand}" 
                    IsEnabled="{Binding SelectedMealEntry, Converter={StaticResource NullToBoolConverter}}" />
            <Button Content="Delete" Command="{Binding DeleteMealEntryCommand}" 
                    IsEnabled="{Binding SelectedMealEntry, Converter={StaticResource NullToBoolConverter}}" />
        </StackPanel>
    </Grid>
</UserControl>
