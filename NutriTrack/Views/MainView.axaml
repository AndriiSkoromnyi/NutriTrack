<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:NutriTrack.ViewModels"
        mc:Ignorable="d"
        x:Class="NutriTrack.Views.MainView"
        Width="800" Height="600"
        Title="NutriTrack - Nutrition Diary"
        x:DataType="vm:MainViewModel">

    <DockPanel>
        <!-- Навигация -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="10" Spacing="10">
            <Button Content="Products" Command="{Binding ShowProductsCommand}" />
            <Button Content="Meal Entries" Command="{Binding ShowMealEntriesCommand}" />
            <Button Content="Daily Summary" Command="{Binding ShowDailySummaryCommand}" />
            <Button Content="Settings" Command="{Binding ShowSettingsCommand}" />
        </StackPanel>

        <!-- Область отображения текущего ViewModel -->
        <ContentControl Content="{Binding CurrentViewModel}" />
    </DockPanel>
</Window>