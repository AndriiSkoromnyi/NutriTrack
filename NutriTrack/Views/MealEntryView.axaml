<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:NutriTrack.Models"
             xmlns:viewModels="clr-namespace:NutriTrack.ViewModels"
             mc:Ignorable="d"
             x:Class="NutriTrack.Views.MealEntryView"
             x:DataType="viewModels:MealEntryViewModel">
    
    <Grid Margin="10" RowDefinitions="Auto,*,Auto" ColumnDefinitions="*,Auto">
        <DatePicker SelectedDate="{Binding SelectedDate}" Grid.ColumnSpan="2" />
        
        <ListBox ItemsSource="{Binding MealEntries}" 
                 SelectedItem="{Binding SelectedMealEntry}" 
                 Grid.Row="1" Grid.Column="0" Margin="0,5,10,5">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="{Binding MealType}" Width="80" />
                        <TextBlock Text="{Binding Weight}" Width="50" />
                        <TextBlock Text="{Binding Date, StringFormat='HH:mm'}" Width="60" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,5,0,5" Spacing="5">
            <ComboBox ItemsSource="{Binding Products}" 
                      SelectedItem="{Binding SelectedProduct}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            
            <TextBox Watermark="Weight (g)" 
                     Text="{Binding SelectedMealEntry.Weight, Mode=TwoWay}" />
            
            <ComboBox ItemsSource="{Binding MealTypeNames}" SelectedItem="{Binding SelectedMealTypeName, Mode=TwoWay}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            
            <TextBox Watermark="Time (HH:mm)" 
                     Text="{Binding SelectedMealEntry.Date, Converter={StaticResource DateTimeToTimeStringConverter}, Mode=TwoWay}" />
        </StackPanel>
        
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
            <Button Content="Add" Command="{Binding AddMealEntryCommand}" />
            <Button Content="Save" Command="{Binding SaveMealEntryCommand}" 
                    IsEnabled="{Binding SelectedMealEntry, Converter={StaticResource NullToBoolConverter}}" />
            <Button Content="Delete" Command="{Binding DeleteMealEntryCommand}" 
                    IsEnabled="{Binding SelectedMealEntry, Converter={StaticResource NullToBoolConverter}}" />
        </StackPanel>
    </Grid>
</UserControl>
