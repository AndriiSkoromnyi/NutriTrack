<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:NutriTrack.ViewModels"
             xmlns:models="clr-namespace:NutriTrack.Models"
             mc:Ignorable="d"
             x:Class="NutriTrack.Views.DailySummaryView"
             x:DataType="viewModels:DailySummaryViewModel">

    <StackPanel Margin="10" Spacing="10">
        <DatePicker SelectedDate="{Binding SelectedDate}" />

        <TextBlock Text="{Binding SelectedDate, StringFormat='{}{0:dd MMM yyyy}'}" FontWeight="Bold" FontSize="20" Margin="0,5,0,10"/>

        <Grid ColumnDefinitions="Auto,*" Margin="0,0,0,10">
            <StackPanel Grid.Column="0" Spacing="10">
                <TextBlock Text="Daily Totals" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
                
                <Grid ColumnDefinitions="120,80">
                    <TextBlock Text="Calories:" Grid.Column="0" FontWeight="SemiBold"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="5">
                        <TextBlock Text="{Binding Summary.TotalCalories, StringFormat='{}{0}'}" />
                        <TextBlock Text="/" Foreground="Gray"/>
                        <TextBlock Text="{Binding UserSettings.DailyCalorieGoal}" Foreground="Gray"/>
                        <TextBlock Text="kcal" Foreground="Gray"/>
                    </StackPanel>
                </Grid>

                <ProgressBar Value="{Binding CaloriesProgress}" 
                           Maximum="100"
                           Height="15"
                           Width="200"
                           Margin="0,5">
                    <ProgressBar.Styles>
                        <Style Selector="ProgressBar">
                            <Style.Animations>
                                <Animation Duration="0:0:0.2">
                                    <KeyFrame Cue="0%">
                                        <Setter Property="Value" Value="0"/>
                                    </KeyFrame>
                                    <KeyFrame Cue="100%">
                                        <Setter Property="Value" Value="{Binding CaloriesProgress}"/>
                                    </KeyFrame>
                                </Animation>
                            </Style.Animations>
                        </Style>
                    </ProgressBar.Styles>
                </ProgressBar>

                <TextBlock Text="{Binding CaloriesStatusMessage}"
                         Foreground="{Binding IsCaloriesGoalMet, Converter={StaticResource BoolToColorConverter}}"
                         FontWeight="SemiBold"
                         TextWrapping="Wrap"
                         MaxWidth="200"/>

                <Grid ColumnDefinitions="120,80">
                    <TextBlock Text="Protein:" Grid.Column="0" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Summary.TotalProtein, StringFormat='{}{0}g'}" Grid.Column="1"/>
                </Grid>

                <Grid ColumnDefinitions="120,80">
                    <TextBlock Text="Fat:" Grid.Column="0" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Summary.TotalFat, StringFormat='{}{0}g'}" Grid.Column="1"/>
                </Grid>

                <Grid ColumnDefinitions="120,80">
                    <TextBlock Text="Carbs:" Grid.Column="0" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Summary.TotalCarbohydrates, StringFormat='{}{0}g'}" Grid.Column="1"/>
                </Grid>
            </StackPanel>
        </Grid>

        <TextBlock Text="Meal Entries" FontWeight="Bold" FontSize="16" Margin="0,10,0,5" />

        <Grid Margin="0,5,0,0">
            <!-- Column Headers -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Grid Grid.Row="0" ColumnDefinitions="80,150,80,100,80" Margin="10,0,10,5">
                <TextBlock Text="Time" Grid.Column="0" FontWeight="SemiBold"/>
                <TextBlock Text="Product" Grid.Column="1" FontWeight="SemiBold"/>
                <TextBlock Text="Weight" Grid.Column="2" FontWeight="SemiBold"/>
                <TextBlock Text="Calories" Grid.Column="3" FontWeight="SemiBold"/>
                <TextBlock Text="Type" Grid.Column="4" FontWeight="SemiBold"/>
            </Grid>

            <ListBox Grid.Row="1" ItemsSource="{Binding MealEntries}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="80,150,80,100,80" Margin="0,2">
                            <TextBlock Text="{Binding Date, StringFormat='{}{0:HH:mm}'}" Grid.Column="0"/>
                            <TextBlock Text="{Binding ProductName}" Grid.Column="1"/>
                            <TextBlock Text="{Binding Weight, StringFormat='{}{0}g'}" Grid.Column="2"/>
                            <TextBlock Text="{Binding Calories, StringFormat='{}{0} kcal'}" Grid.Column="3"/>
                            <TextBlock Text="{Binding MealType}" Grid.Column="4"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </StackPanel>
</UserControl>
