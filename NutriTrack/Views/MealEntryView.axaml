<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:NutriTrack.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="NutriTrack.Views.MealEntryView"
             x:DataType="vm:MealEntryViewModel"
             Background="#f5f5f5">

    <UserControl.Styles>
        <Style Selector="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>
        
        <Style Selector="ComboBoxItem">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>

        <Style Selector="ComboBoxItem:selected">
            <Setter Property="Background" Value="#e3f2fd"/>
            <Setter Property="Foreground" Value="#1976d2"/>
        </Style>

        <Style Selector="ComboBoxItem:pointerover">
            <Setter Property="Background" Value="#f5f5f5"/>
        </Style>
    </UserControl.Styles>
    
    <Grid Margin="20" RowDefinitions="Auto,*">
        <Border Grid.Row="0" 
                Background="White" 
                CornerRadius="8" 
                Padding="16"
                Margin="0,0,0,20"
                BoxShadow="0 2 4 0 #20000000">
            <Grid ColumnDefinitions="Auto,*,Auto,Auto">
                <TextBlock Text="Select Date:" 
                           VerticalAlignment="Center"
                           FontSize="16"
                           FontWeight="SemiBold"/>
                <DatePicker Grid.Column="1"
                           SelectedDate="{Binding SelectedDate}"
                           Margin="16,0"
                           FontSize="14"/>
                <TextBlock Text="Time:" 
                           Grid.Column="2"
                           VerticalAlignment="Center"
                           FontSize="16"
                           Margin="16,0"
                           FontWeight="SemiBold"/>
                <TextBox Grid.Column="3"
                        Text="{Binding TimeString}"
                        Width="80"
                        FontSize="14"
                        Watermark="HH:mm"/>
            </Grid>
        </Border>
        
        <Grid Grid.Row="1" ColumnDefinitions="1.2*,*">
            <Border Grid.Column="0" 
                    Background="White" 
                    CornerRadius="8"
                    Margin="0,0,10,0"
                    BoxShadow="0 2 4 0 #20000000">
                <DockPanel Margin="16">
                    <Grid DockPanel.Dock="Top" 
                          ColumnDefinitions="*,Auto" 
                          Margin="0,0,0,16">
                        <TextBlock Text="Meal Entries"
                                 FontSize="20"
                                 FontWeight="Bold"/>
                        <Button Grid.Column="1"
                                Content="Delete Selected"
                                Command="{Binding DeleteMealEntryCommand}"
                                Classes="delete"/>
                    </Grid>
                    
                    <ListBox ItemsSource="{Binding MealEntries}"
                             SelectedItem="{Binding SelectedMealEntryDisplay}"
                             Background="Transparent">
                        <ListBox.Styles>
                            <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
                                <Setter Property="Background" Value="#fff3f3"/>
                            </Style>
                            <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
                                <Setter Property="Background" Value="#f8f9fa"/>
                            </Style>
                        </ListBox.Styles>
                        
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="Transparent"
                                        CornerRadius="4"
                                        Padding="12"
                                        Margin="0,4">
                                    <Grid ColumnDefinitions="Auto,*,Auto">
                                        <Border Grid.Column="0" 
                                                Background="#e3f2fd"
                                                CornerRadius="4"
                                                Padding="8,4">
                                            <TextBlock Text="{Binding MealType}"
                                                       FontWeight="SemiBold"/>
                                        </Border>
                                        
                                        <StackPanel Grid.Column="1" 
                                                    Margin="12,0"
                                                    VerticalAlignment="Center">
                                            <TextBlock Text="{Binding ProductName}"
                                                       FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Date, StringFormat={}{0:HH:mm}}"
                                                       Foreground="#666666"
                                                       FontSize="12"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="2" 
                                                    VerticalAlignment="Center">
                                            <TextBlock Text="{Binding WeightDisplay}"
                                                       FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Calories, StringFormat='{}{0} kcal'}"
                                                       Foreground="#666666"
                                                       FontSize="12"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>
            
            <Border Grid.Column="1" 
                    Background="White" 
                    CornerRadius="8"
                    Margin="10,0,0,0"
                    BoxShadow="0 2 4 0 #20000000">
                <StackPanel Margin="16">
                    <TextBlock Text="Add/Edit Meal Entry"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="0,0,0,16"/>

                    <TextBlock Text="Product:"
                               Margin="0,0,0,4"/>
                    <ComboBox ItemsSource="{Binding Products}"
                              SelectedItem="{Binding SelectedProduct}"
                              HorizontalAlignment="Stretch"
                              Margin="0,0,0,16">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <TextBlock Text="Weight:"
                               Margin="0,0,0,4"/>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <NumericUpDown Value="{Binding DisplayWeight}"
                                     Minimum="0"
                                     Maximum="2000"
                                     Increment="10"
                                     Width="120"
                                     HorizontalAlignment="Left"/>
                        <TextBlock Text="{Binding WeightUnitDisplay}"
                                 VerticalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock Text="Meal Type:"
                               Margin="0,0,0,4"/>
                    <ComboBox ItemsSource="{Binding MealTypeNames}"
                              SelectedItem="{Binding SelectedMealTypeName}"
                              HorizontalAlignment="Stretch"
                              Margin="0,0,0,24"/>

                    <StackPanel Orientation="Horizontal" 
                                Spacing="8"
                                HorizontalAlignment="Right">
                        <Button Content="Save" 
                                Command="{Binding SaveMealEntryCommand}"
                                Classes="accent"/>
                        <Button Content="Add" 
                                Command="{Binding AddMealEntryCommand}"
                                Classes="accent"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
