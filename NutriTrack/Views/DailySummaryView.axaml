<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:NutriTrack.ViewModels"
             xmlns:sys="using:System"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="NutriTrack.Views.DailySummaryView"
             x:DataType="vm:DailySummaryViewModel">

    <UserControl.Resources>
        <sys:String x:Key="DateFormat">MMM dd, yyyy</sys:String>
    </UserControl.Resources>

    <Grid Margin="20" RowDefinitions="Auto,Auto,*">

        <Border Grid.Row="0" 
                Background="White" 
                CornerRadius="8" 
                Padding="16"
                Margin="0,0,0,20"
                BoxShadow="0 2 4 0 #20000000">
            <StackPanel Orientation="Horizontal" 
                        Spacing="16" 
                        VerticalAlignment="Center">
                <TextBlock Text="Select Date:"
                           FontSize="16"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
                <DatePicker SelectedDate="{Binding SelectedDate}"
                          FontSize="16"
                          DayFormat="dd"
                          MonthFormat="MMM"
                          YearFormat="yyyy"/>
            </StackPanel>
        </Border>
        
        <Grid Grid.Row="1" 
              Margin="0,0,0,20"
              ColumnDefinitions="1*,1*,1*,1*">
            
            <Border Grid.Column="0"
                    Background="White"
                    CornerRadius="8"
                    Margin="0,0,10,0"
                    BoxShadow="0 2 4 0 #20000000">
                <Grid RowDefinitions="Auto,Auto,Auto" Margin="16">
                    <TextBlock Text="Calories"
                               FontSize="16"
                               FontWeight="SemiBold"/>
                    
                    <StackPanel Grid.Row="1" 
                                Orientation="Horizontal" 
                                Margin="0,8,0,4"
                                Spacing="8">
                        <TextBlock Text="{Binding Summary.TotalCalories, StringFormat='{}{0:F0}'}"
                                   FontSize="24"
                                   FontWeight="Bold"/>
                        <TextBlock Text="/"
                                   FontSize="24"
                                   Foreground="#666666"/>
                        <TextBlock Text="{Binding UserSettings.DailyCalorieGoal}"
                                   FontSize="24"
                                   Foreground="#666666"/>
                        <TextBlock Text="kcal"
                                   FontSize="14"
                                   VerticalAlignment="Bottom"
                                   Margin="4,0,0,4"/>
                    </StackPanel>

                    <ProgressBar Grid.Row="2" 
                                 Minimum="0"
                                 Maximum="100"
                                 Value="{Binding CaloriesProgress}"
                                 Height="6"
                                 CornerRadius="3"
                                 Foreground="#2196F3"/>
                </Grid>
            </Border>
            
            <Border Grid.Column="1"
                    Background="White"
                    CornerRadius="8"
                    Margin="10,0"
                    BoxShadow="0 2 4 0 #20000000">
                <Grid RowDefinitions="Auto,Auto,Auto" Margin="16">
                    <TextBlock Text="Protein"
                               FontSize="16"
                               FontWeight="SemiBold"/>
                    
                    <StackPanel Grid.Row="1" 
                                Orientation="Horizontal" 
                                Margin="0,8,0,4"
                                Spacing="8">
                        <TextBlock Text="{Binding Summary.TotalProtein, StringFormat='{}{0:F0}'}"
                                   FontSize="24"
                                   FontWeight="Bold"/>
                        <TextBlock Text="/"
                                   FontSize="24"
                                   Foreground="#666666"/>
                        <TextBlock Text="{Binding UserSettings.DailyProteinGoal}"
                                   FontSize="24"
                                   Foreground="#666666"/>
                        <TextBlock Text="g"
                                   FontSize="14"
                                   VerticalAlignment="Bottom"
                                   Margin="4,0,0,4"/>
                    </StackPanel>

                    <ProgressBar Grid.Row="2" 
                                 Minimum="0"
                                 Maximum="100"
                                 Value="{Binding ProteinProgress}"
                                 Height="6"
                                 CornerRadius="3"
                                 Foreground="#4CAF50"/>
                </Grid>
            </Border>
            
            <Border Grid.Column="2"
                    Background="White"
                    CornerRadius="8"
                    Margin="10,0"
                    BoxShadow="0 2 4 0 #20000000">
                <Grid RowDefinitions="Auto,Auto,Auto" Margin="16">
                    <TextBlock Text="Fat"
                               FontSize="16"
                               FontWeight="SemiBold"/>
                    
                    <StackPanel Grid.Row="1" 
                                Orientation="Horizontal" 
                                Margin="0,8,0,4"
                                Spacing="8">
                        <TextBlock Text="{Binding Summary.TotalFat, StringFormat='{}{0:F0}'}"
                                   FontSize="24"
                                   FontWeight="Bold"/>
                        <TextBlock Text="/"
                                   FontSize="24"
                                   Foreground="#666666"/>
                        <TextBlock Text="{Binding UserSettings.DailyFatGoal}"
                                   FontSize="24"
                                   Foreground="#666666"/>
                        <TextBlock Text="g"
                                   FontSize="14"
                                   VerticalAlignment="Bottom"
                                   Margin="4,0,0,4"/>
                    </StackPanel>

                    <ProgressBar Grid.Row="2" 
                                 Minimum="0"
                                 Maximum="100"
                                 Value="{Binding FatProgress}"
                                 Height="6"
                                 CornerRadius="3"
                                 Foreground="#FF9800"/>
                </Grid>
            </Border>
            
            <Border Grid.Column="3"
                    Background="White"
                    CornerRadius="8"
                    Margin="10,0,0,0"
                    BoxShadow="0 2 4 0 #20000000">
                <Grid RowDefinitions="Auto,Auto,Auto" Margin="16">
                    <TextBlock Text="Carbs"
                               FontSize="16"
                               FontWeight="SemiBold"/>
                    
                    <StackPanel Grid.Row="1" 
                                Orientation="Horizontal" 
                                Margin="0,8,0,4"
                                Spacing="8">
                        <TextBlock Text="{Binding Summary.TotalCarbohydrates, StringFormat='{}{0:F0}'}"
                                   FontSize="24"
                                   FontWeight="Bold"/>
                        <TextBlock Text="/"
                                   FontSize="24"
                                   Foreground="#666666"/>
                        <TextBlock Text="{Binding UserSettings.DailyCarbsGoal}"
                                   FontSize="24"
                                   Foreground="#666666"/>
                        <TextBlock Text="g"
                                   FontSize="14"
                                   VerticalAlignment="Bottom"
                                   Margin="4,0,0,4"/>
                    </StackPanel>

                    <ProgressBar Grid.Row="2" 
                                 Minimum="0"
                                 Maximum="100"
                                 Value="{Binding CarbsProgress}"
                                 Height="6"
                                 CornerRadius="3"
                                 Foreground="#9C27B0"/>
                </Grid>
            </Border>
        </Grid>
        
        <Border Grid.Row="2"
                Background="White"
                CornerRadius="8"
                BoxShadow="0 2 4 0 #20000000">
            <DockPanel Margin="16">
                <TextBlock DockPanel.Dock="Top"
                           Text="Meal Entries"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="0,0,0,16"/>

                <Grid ColumnDefinitions="Auto,*,Auto,Auto,Auto" 
                      DockPanel.Dock="Top" 
                      Margin="0,0,0,8">
                    <TextBlock Text="Time" 
                               Grid.Column="0"
                               FontWeight="SemiBold"
                               Margin="0,0,40,0"/>
                    <TextBlock Text="Product" 
                               Grid.Column="1"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="Weight" 
                               Grid.Column="2"
                               FontWeight="SemiBold"
                               Margin="20,0"/>
                    <TextBlock Text="Calories" 
                               Grid.Column="3"
                               FontWeight="SemiBold"
                               Margin="20,0"/>
                    <TextBlock Text="Type" 
                               Grid.Column="4"
                               FontWeight="SemiBold"
                               Margin="20,0,0,0"/>
                </Grid>

                <ListBox ItemsSource="{Binding MealEntries}"
                         Background="Transparent">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnDefinitions="Auto,*,Auto,Auto,Auto">
                                <TextBlock Text="{Binding Date, StringFormat='{}{0:HH:mm}'}"
                                           Grid.Column="0"
                                           Margin="0,0,40,0"/>
                                <TextBlock Text="{Binding ProductName}"
                                           Grid.Column="1"/>
                                <TextBlock Text="{Binding Weight, StringFormat='{}{0}g'}"
                                           Grid.Column="2"
                                           Margin="20,0"/>
                                <TextBlock Text="{Binding Calories, StringFormat='{}{0} kcal'}"
                                           Grid.Column="3"
                                           Margin="20,0"/>
                                <Border Grid.Column="4"
                                        Background="#e3f2fd"
                                        CornerRadius="4"
                                        Padding="8,4"
                                        Margin="20,0,0,0">
                                    <TextBlock Text="{Binding MealType}"/>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
