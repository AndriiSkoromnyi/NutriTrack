<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:NutriTrack.ViewModels"
             xmlns:models="clr-namespace:NutriTrack.Models"
             mc:Ignorable="d"
             x:Class="NutriTrack.Views.DailySummaryView"
             x:DataType="viewModels:DailySummaryViewModel">

    <StackPanel Margin="10" Spacing="10">
        <DatePicker SelectedDate="{Binding SelectedDate}" />

        <TextBlock Text="{Binding Summary.Date, StringFormat='Summary for {0:dd MMM yyyy}'}" FontWeight="Bold" FontSize="16" />

        <StackPanel Orientation="Horizontal" Spacing="20">
            <TextBlock Text="Calories:" />
            <TextBlock Text="{Binding Summary.TotalCalories}" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Spacing="20">
            <TextBlock Text="Protein:" />
            <TextBlock Text="{Binding Summary.TotalProtein}" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Spacing="20">
            <TextBlock Text="Fat:" />
            <TextBlock Text="{Binding Summary.TotalFat}" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Spacing="20">
            <TextBlock Text="Carbohydrates:" />
            <TextBlock Text="{Binding Summary.TotalCarbohydrates}" />
        </StackPanel>

        <TextBlock Text="Meal Entries:" FontWeight="Bold" Margin="0,10,0,5" />

        <ListBox ItemsSource="{Binding Summary.MealEntries}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="{Binding MealType}" Width="80" />
                        <TextBlock Text="{Binding Weight}" Width="50" />
                        <TextBlock Text="{Binding Date, StringFormat='HH:mm'}" Width="60" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
</UserControl>
